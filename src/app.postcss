/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html,
  .solid-bg {
    @apply dark:bg-neutral-950 bg-neutral-50 dark:text-white;
  }

  input {
    @apply focus:outline-none;
  }
}

.play-button {
  filter: drop-shadow(0 0 0.4rem rgba(0, 0, 0, 1));
}

.pill {
  @apply rounded-full px-3 py-1 flex transition bg-neutral-900 hover:bg-neutral-800;
}
